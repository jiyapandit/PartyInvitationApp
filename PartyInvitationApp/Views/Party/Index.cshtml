@model List<PartyInvitationApp.Models.Party>
@{
    ViewData["Title"] = "All Parties";
}

<h2 class="text-center mb-4">🎊 All Parties</h2>
<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Create New Party</a>
</div>

<div class="row">
    @foreach (var party in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@party.Description</h5>
                    <p class="card-text">
                        📅 <strong>@party.DateOfParty.ToShortDateString()</strong> <br>
                        📍 <strong>@party.Location</strong> <br>
                        👥 <strong>@party.Invitations.Count</strong> Invites
                    </p>
                    <a asp-action="Manage" asp-route-id="@party.Id" class="btn btn-info">Manage</a>
                    <a asp-action="Edit" asp-route-id="@party.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@party.Id" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.FirstVisit != null)
{
    <p class="text-muted">First visited on: @ViewBag.FirstVisit</p>
}
