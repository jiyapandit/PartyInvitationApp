@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PartyInvitationApp</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div style="background-color: #ccc; padding: 1rem;">
            <h1 style="display: inline-block; margin: 0;">Party Invitation App</h1>
            <nav style="float: right;">
                <a asp-controller="Party" asp-action="Index" style="margin-right:1rem;">Home</a>
                <a asp-controller="Party" asp-action="Create">Create Party</a>
            </nav>
        </div>
        <hr />
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer style="margin-top: 1rem; font-size: .9em; color: #666;">
        <hr />
        <p>&copy; @DateTime.Now.Year - Party Invitation App</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
