@model PartyInvitationApp.Models.Party
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Delete Party";
}

<h2>Delete Party: @Model.Description</h2>
<p>Are you sure you want to delete this party?</p>

<!-- Notice we reference the DeleteConfirmed action and pass the ID in the route -->
<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">No, Cancel</a>
</form>
