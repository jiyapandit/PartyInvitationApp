@model IEnumerable<PartyInvitationApp.Models.Invitation>
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = "Guest List";
}

<h2>Guest List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Guest Name</th>
            <th>Guest Email</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invite in Model)
        {
            <tr>
                <td>@invite.GuestName</td>
                <td>@invite.GuestEmail</td>
                <td>@invite.Status</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Party" asp-action="Index" class="btn btn-secondary">Back to Parties</a>
